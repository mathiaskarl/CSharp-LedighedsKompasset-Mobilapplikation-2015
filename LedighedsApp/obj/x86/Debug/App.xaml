<Application
    x:Class="LedighedsApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LedighedsApp">

    <Application.Resources>
        <ResourceDictionary>

            <Style x:Key="CalendarDayBox" TargetType="Border">
                <Setter Property="BorderThickness" Value="0, 1, 0, 1" />
                <Setter Property="BorderBrush" Value="Ivory" />
            </Style>

            <Style x:Key="CalendarDayLabel" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="10" />
                <Setter Property="FontSize" Value="16" />
            </Style>

            <Style x:Key="CalendarHeader" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="5" />
                <Setter Property="FontSize" Value="34" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>

            <Style x:Key="CalendarHeaderBox" TargetType="Border">
                 <Setter Property="BorderThickness" Value="0, 1, 0, 1" />
                <Setter Property="BorderBrush" Value="Black" />
            </Style>

            <Style x:Key="CalendarItem" TargetType="TextBlock">
                <Setter Property="FontSize" Value="30" />
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="Margin" Value="10" />
                <Setter Property="Foreground" Value="Black" />
            </Style>

            <Style x:Key="CalendarItemProperty" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="Margin" Value="8, 5, 5, 5" />
                <Setter Property="Foreground" Value="DarkSlateGray" />
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>

            <Style x:Key="ActivityPropertyHeader" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="Margin" Value="11, 12, 5, 0" />
                <Setter Property="Foreground" Value="Ivory" />
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>

            <Style x:Key="ActivityPropertyTextBox" TargetType="TextBox">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="Margin" Value="8, 0, 8, 16" />
                <Setter Property="Foreground" Value="DarkSlateGray" />
                <Setter Property="Background" Value="Ivory" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>

            <Style x:Key="ActivityPropertyComboBox" TargetType="ComboBox">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="Margin" Value="8, -10, 8, 6" />
                <Setter Property="Foreground" Value="DarkSlateGray" />
                <Setter Property="Background" Value="Ivory" />
            </Style>

            <Style x:Key="CalendarItemPropertyValue" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="Margin" Value="5, 5, 0, 5" />
                <Setter Property="Foreground" Value="DarkSlateGray" />
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>

            <Style x:Key="CalendarItemBox" TargetType="Grid">
                <Setter Property="Background" Value="Transparent"/>
            </Style>

            <Style x:Key="CalendarSelectedItemBox" TargetType="Grid">
                <Setter Property="Background" Value="Gray" />
            </Style>

            <Style x:Key="CalendarOtherMonthItemBox" TargetType="Grid">
            </Style>

            <Style TargetType="Grid" x:Key="gridBackground">
                <Setter Property="Background">
                    <Setter.Value>
                        <ImageBrush ImageSource="Assets/Images/tempBackground.jpg"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="Button" x:Key="ImageButton">
                <Setter Property="ClickMode" Value="Press" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="BorderThickness" Value="0" />
            </Style>

            <Style TargetType="TextBlock" x:Key="MenuText">
                <Setter Property="Margin" Value="0, -5, 0, 10" />
                <Setter Property="FontSize" Value="16"/>
            </Style>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <ImageBrush x:Key="HubBackgroundImageBrush" ImageSource="Assets/HubBackground.png"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="HighContrast">
                    <ImageBrush x:Key="HubBackgroundImageBrush" ImageSource="{x:Null}"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>

